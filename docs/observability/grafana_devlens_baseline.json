{
  "title": "DevLens Baseline Observability",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "API p95 latency (s)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, method, path) (rate(devlens_http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "{{method}} {{path}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "SSE startup p95 (s)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, endpoint) (rate(devlens_sse_startup_latency_seconds_bucket[5m])))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "title": "Worker stage p95 (s)",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, stage, status) (rate(devlens_analysis_stage_duration_seconds_bucket[5m])))",
          "legendFormat": "{{stage}} {{status}}"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
    },
    {
      "id": 4,
      "title": "Worker stage throughput",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (stage, status) (rate(devlens_analysis_stage_duration_seconds_count[5m]))",
          "legendFormat": "{{stage}} {{status}}"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
    }
  ]
}
